    <!-- Handle Server-Side Flash Messages -->
    <script>
        <% if (success_msg && success_msg.length > 0) { %>
            window.showToast('<%= success_msg %>', 'success');

            // üî• Pemicu Perayaan Confetti Universal (Selamat, Sukses, Berjalan Lancar)
            <% 
            const confettiKeywords = ['berhasil', 'selamat', 'sukses', 'disimpan', 'ditambahkan', 'diproses'];
            const msgStr = Array.isArray(success_msg) ? success_msg.join(' ') : String(success_msg);
            const shouldConfetti = confettiKeywords.some(keyword => msgStr.toLowerCase().includes(keyword));
            if (shouldConfetti) { 
            %>
                    let duration = 2.5 * 1000;
                let end = Date.now() + duration;

                (function frame() {
                    confetti({
                        particleCount: 5,
                        angle: 60,
                        spread: 55,
