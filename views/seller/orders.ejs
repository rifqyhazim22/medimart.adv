<%- include('../partials/header', { activeTab: 'orders' }) %>

    <style>
        .dashboard-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 40px 20px;
        }

        .dashboard-header {
            margin-bottom: 20px;
        }

        .dashboard-header h1 {
            font-size: 32px;
            font-weight: 800;
            color: var(--text-dark);
            margin-bottom: 8px;
        }

        .dashboard-header p {
            color: var(--text-gray);
            font-size: 16px;
        }

        /* Sub Navigation Tabs */
        .seller-nav {
            display: flex;
            gap: 16px;
            margin-bottom: 30px;
            border-bottom: 2px solid var(--border);
            padding-bottom: 12px;
        }

        .seller-nav-item {
            text-decoration: none;
            color: var(--text-gray);
            font-weight: 600;
            font-size: 16px;
            padding: 8px 16px;
            border-radius: 8px;
            transition: all 0.2s;
        }

        .seller-nav-item:hover {
            background: var(--border);
            color: var(--text-dark);
        }

        .seller-nav-item.active {
            background: #FF6B35;
            color: white;
            box-shadow: 0 4px 6px rgba(255, 107, 53, 0.2);
        }
    </style>

    <div class="main-container">
        <div class="dashboard-container">
            <div class="dashboard-header">
                <h1 data-i18n="seller.orders_title">Kelola Pesanan Masuk</h1>
                <p>Halo, <strong>
                        <%= currentUser.full_name || currentUser.username %>
                    </strong>! <span data-i18n="seller.orders_subtitle_prefix">Berikut adalah daftar pesanan dari para
                        pelanggan.</span></p>
            </div>



            <!-- SELLER INCOMING ORDERS -->
            <div class="table-container"
                style="background: var(--bg-white); border-radius: 12px; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1); overflow: hidden; margin-bottom: 40px;">
                <table style="width: 100%; border-collapse: collapse;">
                    <thead>
                        <tr style="background: var(--bg-light); text-align: left;">
                            <th style="padding: 16px;" data-i18n="seller.col_date">Tanggal</th>
                            <th style="padding: 16px;" data-i18n="seller.col_product">Produk</th>
                            <th style="padding: 16px;" data-i18n="seller.col_buyer">Pembeli</th>
                            <th style="padding: 16px;">Qty</th>
                            <th style="padding: 16px;" data-i18n="seller.col_total">Total</th>
                            <th style="padding: 16px;" data-i18n="seller.col_status">Status</th>
                            <th style="padding: 16px;" data-i18n="seller.col_action">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (orders.length===0) { %>
                            <tr>
                                <td colspan="7" style="padding: 24px; text-align: center;" data-i18n="seller.no_orders">
                                    Belum ada pesanan masuk.</td>
                            </tr>
                            <% } else { %>
                                <% orders.forEach(item=> { %>
                                    <tr>
                                        <td style="padding: 16px; border-bottom: 1px solid var(--border);">
                                            <%= new Date(item.created_at).toLocaleDateString('id-ID') %>
                                        </td>
                                        <td style="padding: 16px; border-bottom: 1px solid var(--border);">
                                            <div style="display: flex; align-items: center; gap: 10px;">
                                                <img src="<%= item.image_url || '/img/default-product.svg' %>"
                                                    style="width: 40px; height: 40px; border-radius: 4px; object-fit: cover;">
                                                <span>
                                                    <%= item.product_name %>
                                                </span>
                                            </div>
                                        </td>
                                        <td style="padding: 16px; border-bottom: 1px solid var(--border);">
                                            <%= item.buyer_name %>
                                        </td>
                                        <td style="padding: 16px; border-bottom: 1px solid var(--border);">
                                            <%= item.quantity %>
                                        </td>
                                        <td
                                            style="padding: 16px; border-bottom: 1px solid var(--border); font-weight: 600;">
                                            Rp <%= (item.price_at_purchase * item.quantity).toLocaleString('id-ID') %>
                                        </td>
                                        <td style="padding: 16px; border-bottom: 1px solid var(--border);">
                                            <% if (item.status==='paid' || item.status==='pending' ) { %>
                                                <span
                                                    style="padding: 4px 12px; border-radius: 9999px; font-size: 11px; font-weight: 600; background: #fef3c7; color: #92400e;"
                                                    data-i18n="status.waiting">
                                                    ðŸŸ¡ Menunggu Diproses
                                                </span>
                                                <% } else if (item.status==='processed' ) { %>
                                                    <span
                                                        style="padding: 4px 12px; border-radius: 9999px; font-size: 11px; font-weight: 600; background: #ccfbf1; color: #0d9488;"
                                                        data-i18n="status.packing">
                                                        ðŸ”µ Sedang Dikemas
                                                    </span>
                                                    <% } else if (item.status==='shipped' ) { %>
                                                        <span
                                                            style="padding: 4px 12px; border-radius: 9999px; font-size: 11px; font-weight: 600; background: #dbeafe; color: #1e40af;"
                                                            data-i18n="status.shipping">
                                                            ðŸšš Dalam Pengiriman
                                                        </span>
                                                        <% } else if (item.status==='completed' ) { %>
                                                            <span
                                                                style="padding: 4px 12px; border-radius: 9999px; font-size: 11px; font-weight: 600; background: #d1fae5; color: #065f46;"
                                                                data-i18n="status.completed">
                                                                âœ… Selesai Diterima
                                                            </span>
                                                            <% } else if (item.status==='rejected' ||
                                                                item.status==='cancelled' ) { %>
                                                                <span
                                                                    style="padding: 4px 12px; border-radius: 9999px; font-size: 11px; font-weight: 600; background: #fee2e2; color: #b91c1c;"
                                                                    data-i18n="<%= item.status==='rejected' ? 'status.rejected_seller' : 'status.cancelled_buyer' %>">
                                                                    <%= item.status==='rejected' ? 'â›” Saya Tolak'
                                                                        : 'âŒ Dibatalkan Pembeli' %>
                                                                </span>
                                                                <% } else { %>
                                                                    <span
                                                                        style="padding: 4px 12px; border-radius: 9999px; font-size: 11px; font-weight: 600; background: var(--border); color: var(--text-dark);">
                                                                        <%= item.status %>
                                                                    </span>
                                                                    <% } %>
                                        </td>
                                        <td style="padding: 16px; border-bottom: 1px solid var(--border);">
                                            <div style="display: flex; gap: 6px; flex-wrap: wrap; align-items: center;">
                                                <% if (item.status==='paid' || item.status==='pending' ) { %>
                                                    <form action="/orders/items/<%= item.id %>/accept" method="POST"
                                                        style="margin: 0;">
                                                        <button type="submit" class="btn-small btn-primary"
                                                            data-i18n="seller.btn_process">Proses</button>
                                                    </form>
                                                    <form action="/orders/items/<%= item.id %>/reject" method="POST"
                                                        style="margin: 0;"
                                                        onsubmit="return confirmAction(event, t('seller.reject_confirm'), t('seller.yes_reject'), '#EF4444');">
                                                        <button type="submit" class="btn-small btn-delete"
                                                            data-i18n="seller.btn_reject">Tolak</button>
                                                    </form>
                                                    <a href="/orders/seller/<%= item.id %>"
                                                        class="btn-small btn-secondary" style="text-decoration: none;"
                                                        data-i18n="seller.btn_detail">Detail</a>
                                                    <% } else if (item.status==='processed' ) { %>
                                                        <form action="/orders/items/<%= item.id %>/ship" method="POST"
                                                            style="margin: 0;">
                                                            <button type="submit" class="btn-small btn-purple"
                                                                data-i18n="seller.btn_ship">ðŸšš
                                                                Kirim</button>
                                                        </form>
                                                        <a href="/orders/seller/<%= item.id %>"
                                                            class="btn-small btn-secondary"
                                                            style="text-decoration: none;"
                                                            data-i18n="seller.btn_detail">Detail</a>
                                                        <% } else if (item.status==='shipped' ) { %>
                                                            <span
                                                                style="color: #6366f1; font-weight: 600; font-size: 13px;"
                                                                data-i18n="status.shipping_inline">Sedang
                                                                Dikirim...</span>
                                                            <a href="/orders/seller/<%= item.id %>"
                                                                class="btn-small btn-secondary"
                                                                style="text-decoration: none;"
                                                                data-i18n="seller.btn_detail">Detail</a>
                                                            <% } else if (item.status==='completed' ) { %>
                                                                <span
                                                                    style="color: #059669; font-weight: 600; font-size: 13px;"
                                                                    data-i18n="status.completed_inline">âœ…
                                                                    Selesai</span>
                                                                <a href="/orders/seller/<%= item.id %>"
                                                                    class="btn-small btn-secondary"
                                                                    style="text-decoration: none;"
                                                                    data-i18n="seller.btn_detail">Detail</a>
                                                                <form action="/orders/items/<%= item.id %>/hide"
                                                                    method="POST"
                                                                    onsubmit="return confirmAction(event, t('seller.delete_history'), t('product.yes_delete'), '#EF4444')"
                                                                    style="margin: 0;">
                                                                    <button type="submit" class="btn-small"
                                                                        style="background:var(--border); color: var(--text-gray); font-size:11px; padding: 4px 8px;"
                                                                        data-i18n="seller.btn_delete">Hapus</button>
                                                                </form>
                                                                <% } else if (item.status==='rejected' ||
                                                                    item.status==='cancelled' ) { %>
                                                                    <span
                                                                        style="color: #ef4444; font-size: 12px; font-weight: 600; text-transform: capitalize;">
                                                                        <%= item.status %>
                                                                    </span>
                                                                    <form action="/orders/items/<%= item.id %>/hide"
                                                                        method="POST"
                                                                        onsubmit="return confirmAction(event, t('seller.delete_history'), t('product.yes_delete'), '#EF4444')"
                                                                        style="margin: 0;">
                                                                        <button type="submit" class="btn-small"
                                                                            style="background:var(--border); color: var(--text-gray); font-size:11px; padding: 4px 8px;"
                                                                            data-i18n="seller.btn_delete">Hapus</button>
                                                                    </form>
                                                                    <% } else { %>
                                                                        <span
                                                                            style="color: var(--text-gray); font-size: 12px; text-transform: capitalize;">
                                                                            <%= item.status %>
                                                                        </span>
                                                                        <a href="/orders/seller/<%= item.id %>"
                                                                            class="btn-small btn-secondary"
                                                                            style="text-decoration: none;"
                                                                            data-i18n="seller.btn_detail">Detail</a>
                                                                        <% } %>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }); %>
                                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>

        <script>
            // AJAX Seller Actions
            document.addEventListener('DOMContentLoaded', () => {
                const handleAction = async (e) => {
                    const form = e.target.closest('form');
                    if (!form) return;

                    // Only hijack seller actions
                    if (!form.action.includes('/accept') && !form.action.includes('/reject') && !form.action.includes('/ship'))
                        return;

                    // If user cancelled an inline confirm, default action is prevented
                    if (e.defaultPrevented) return;
                    e.preventDefault();

                    const btn = form.querySelector('button');
                    const originalText = btn.innerHTML;
                    btn.innerHTML = 'â³';
                    btn.disabled = true;

                    try {
                        const response = await fetch(form.action, {
                            method: 'POST',
                            headers: {
                                'Accept': 'application/json',
                                'X-Requested-With': 'XMLHttpRequest'
                            }
                        });
                        const data = await response.json();

                        if (data.success) {
                            window.showToast(data.message, 'success');

                            const row = form.closest('tr');
                            row.style.transition = 'all 0.5s';
                            const statusBadge = row.querySelector('td:nth-child(5) span');

                            if (statusBadge) {
                                statusBadge.textContent = data.status.charAt(0).toUpperCase() + data.status.slice(1);
                                if (data.status === 'processed') {
                                    statusBadge.style.background = '#d1fae5';
                                    statusBadge.style.color = '#065f46';
                                } else if (data.status === 'shipped') {
                                    statusBadge.style.background = '#d1fae5';
                                    statusBadge.style.color = '#065f46';
                                } else if (data.status === 'rejected') {
                                    statusBadge.style.background = '#fee2e2';
                                    statusBadge.style.color = '#b91c1c';
                                }
                            }

                            setTimeout(() => location.reload(), 500);

                        } else {
                            window.showToast(data.message || t('admin.failed'), 'error');
                            btn.innerHTML = originalText;
                            btn.disabled = false;
                        }
                    } catch (err) {
                        console.error(err);
                        window.showToast(t('toast.error_generic'), 'error');
                        btn.innerHTML = originalText;
                        btn.disabled = false;
                    }
                };

                const table = document.querySelector('table');
                if (table) {
                    table.addEventListener('submit', handleAction);
                }
            });
        </script>