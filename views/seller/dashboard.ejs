<%- include('../partials/header', { activeTab: 'dashboard' }) %>

    <style>
        /* Embedded Premium Dashboard Styles */
        .dashboard-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 40px 20px;
        }

        /* Header & Stats */
        .dashboard-header {
            background: transparent;
            padding: 0;
            box-shadow: none;
            color: var(--text-dark);
            margin-bottom: 40px;
        }

        .dashboard-header h1 {
            font-size: 32px;
            font-weight: 800;
            color: var(--text-dark);
            margin-bottom: 8px;
            background: none;
            -webkit-text-fill-color: initial;
        }

        .dashboard-header p {
            color: var(--text-gray);
            font-size: 16px;
        }

        .dashboard-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 24px;
            margin-top: 32px;
        }

        .stat-card {
            background: var(--bg-white);
            padding: 24px;
            border-radius: 16px;
            border: 1px solid var(--border);
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03);
            display: flex;
            align-items: center;
            gap: 20px;
            transition: transform 0.2s;
        }

        .stat-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        }

        .stat-icon {
            width: 56px;
            height: 56px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
        }

        .stat-icon.blue {
            background: #eff6ff;
            color: #3b82f6;
        }

        .stat-icon.orange {
            background: #fff7ed;
            color: #f97316;
        }

        .stat-icon.green {
            background: #f0fdf4;
            color: #22c55e;
        }

        .stat-content h3 {
            margin: 0;
            color: var(--text-gray);
            font-size: 14px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            margin-bottom: 4px;
        }

        .stat-value {
            font-size: 28px;
            font-weight: 700;
            color: var(--text-dark);
            margin: 0;
        }

        .seller-nav {
            display: flex;
            gap: 16px;
            margin-bottom: 30px;
            border-bottom: 2px solid var(--border);
            padding-bottom: 12px;
        }

        .seller-nav-item {
            text-decoration: none;
            color: var(--text-gray);
            font-weight: 600;
            font-size: 16px;
            padding: 8px 16px;
            border-radius: 8px;
            transition: all 0.2s;
        }

        .seller-nav-item:hover {
            background: var(--border);
            color: var(--text-dark);
        }

        .seller-nav-item.active {
            background: #FF6B35;
            color: white;
            box-shadow: 0 4px 6px rgba(255, 107, 53, 0.2);
        }
    </style>

    <div class="main-container">
        <div class="dashboard-container">
            <!-- SELLER DASHBOARD -->
            <div class="dashboard-header">
                <h1 data-i18n="seller.dashboard_title">Dashboard Toko</h1>
                <p><span data-i18n="seller.greeting">Halo</span>, <strong>
                        <%= currentUser.full_name || currentUser.username %>
                    </strong>! <span data-i18n="seller.greeting_desc">Kelola produk Anda disini.</span></p>
                <div class="dashboard-stats">
                    <div class="stat-card">
                        <div class="stat-icon blue">üì¶</div>
                        <div class="stat-content">
                            <h3 data-i18n="seller.total_products">Total Produk</h3>
                            <div class="stat-value">
                                <%= stats.totalProducts %>
                            </div>
                        </div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon orange">üìä</div>
                        <div class="stat-content">
                            <h3 data-i18n="seller.total_stock">Total Stok</h3>
                            <div class="stat-value">
                                <%= stats.totalStock %>
                            </div>
                        </div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon green">üì¶</div>
                        <div class="stat-content">
                            <h3 data-i18n="seller.inventory_value">Nilai Inventory</h3>
                            <div class="stat-value">Rp <%= parseInt(stats.totalValue).toLocaleString('id-ID') %>
                            </div>
                        </div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon purple" style="background: #f3e8ff; color: #a855f7;">üí≥</div>
                        <div class="stat-content">
                            <h3 data-i18n="seller.net_revenue">Laba Bersih (90%)</h3>
                            <div class="stat-value">Rp <%= parseInt(stats.netRevenue || 0).toLocaleString('id-ID') %>
                            </div>
                        </div>
                    </div>
                </div>


                <!-- Advanced Analytics Widgets -->
                <div style="display: flex; flex-wrap: wrap; gap: 24px; margin-top: 40px;">
                    <!-- Chart.js Graph -->
                    <div
                        style="flex: 1 1 600px; background: var(--bg-white); padding: 24px; border-radius: 16px; border: 1px solid var(--border); box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);">
                        <h3 style="margin: 0 0 20px 0; color: var(--text-dark); font-size: 18px;"
                            data-i18n="seller.revenue_trend">Tren Laba Bersih Lapak
                            Tahun
                            Ini (IDR)</h3>
                        <div style="position: relative; height: 300px; width: 100%;">
                            <canvas id="revenueChart"></canvas>
                        </div>
                    </div>

                    <!-- Top Selling Products -->
                    <div
                        style="flex: 1 1 300px; background: var(--bg-white); padding: 24px; border-radius: 16px; border: 1px solid var(--border); box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);">
                        <h3 style="margin: 0 0 20px 0; color: var(--text-dark); font-size: 18px;"><span
                                data-i18n="seller.top_products">Top 5 Produk Terlaris</span>
                            üèÜ</h3>
                        <div style="display: flex; flex-direction: column; gap: 16px;">
                            <% if(topProducts && topProducts.length> 0) { %>
                                <% topProducts.forEach(tp=> { %>
                                    <div
                                        style="display: flex; align-items: center; gap: 12px; padding-bottom: 12px; border-bottom: 1px solid var(--border);">
                                        <img src="<%= tp.image || '/images/default-medicine.png' %>"
                                            style="width: 48px; height: 48px; border-radius: 8px; object-fit: cover; border: 1px solid var(--border);">
                                        <div style="flex: 1;">
                                            <div style="font-weight: 600; color: var(--text-dark); font-size: 14px;">
                                                <%= tp.name %>
                                            </div>
                                            <div style="font-size: 12px; color: var(--text-gray); margin-top: 2px;">
                                                <%= tp.qty %> <span data-i18n="seller.items_sold">barang terjual</span>
                                            </div>
                                        </div>
                                        <div
                                            style="font-weight: 700; color: #10b981; font-size: 14px; text-align: right;">
                                            +Rp <%= parseInt(tp.revenue).toLocaleString('id-ID') %>
                                        </div>
                                    </div>
                                    <% }) %>
                                        <% } else { %>
                                            <p style="color: var(--text-gray); font-size: 14px; text-align: center; margin-top: 40px;"
                                                data-i18n="seller.no_sales">
                                                Belum ada penjualan tercatat.</p>
                                            <% } %>
                        </div>
                    </div>
                </div>

                <!-- Recent Orders -->
                <div
                    style="margin-top: 24px; background: var(--bg-white); padding: 24px; border-radius: 16px; border: 1px solid var(--border); box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);">
                    <div
                        style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                        <h3 style="margin: 0; color: var(--text-dark); font-size: 18px;"><span
                                data-i18n="seller.recent_orders">Pesanan Masuk Terbaru</span> üõçÔ∏è</h3>
                        <a href="/seller/orders"
                            style="color: #3b82f6; text-decoration: none; font-size: 14px; font-weight: 600; padding: 6px 12px; background: var(--bg-light); border: 1px solid var(--border); border-radius: 8px; transition: background 0.2s;"
                            onmouseover="this.style.background='var(--border)'"
                            onmouseout="this.style.background='var(--bg-light)'"><span data-i18n="seller.view_all">Lihat
                                Seluruhnya</span> &rarr;</a>
                    </div>
                    <div style="overflow-x: auto;">
                        <table style="width: 100%; border-collapse: collapse; min-width: 600px;">
                            <thead>
                                <tr
                                    style="border-bottom: 2px solid var(--border); text-align: left; background: var(--bg-light);">
                                    <th style="padding: 12px 16px; color: var(--text-gray); font-weight: 700; font-size: 12px; text-transform: uppercase; letter-spacing: 0.05em;"
                                        data-i18n="seller.th_buyer">
                                        Pembeli</th>
                                    <th style="padding: 12px 16px; color: var(--text-gray); font-weight: 700; font-size: 12px; text-transform: uppercase; letter-spacing: 0.05em;"
                                        data-i18n="seller.th_product">
                                        Produk (Kuantitas)</th>
                                    <th style="padding: 12px 16px; color: var(--text-gray); font-weight: 700; font-size: 12px; text-transform: uppercase; letter-spacing: 0.05em;"
                                        data-i18n="seller.th_amount">
                                        Nominal Resi</th>
                                    <th style="padding: 12px 16px; color: var(--text-gray); font-weight: 700; font-size: 12px; text-transform: uppercase; letter-spacing: 0.05em;"
                                        data-i18n="seller.th_status">
                                        Status Order</th>
                                    <th style="padding: 12px 16px; color: var(--text-gray); font-weight: 700; font-size: 12px; text-transform: uppercase; letter-spacing: 0.05em;"
                                        data-i18n="seller.th_date">
                                        Tanggal Berlangsung</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(recentOrders && recentOrders.length> 0) { %>
                                    <% recentOrders.forEach(order=> { %>
                                        <tr style="border-bottom: 1px solid var(--border); transition: background 0.2s;"
                                            onmouseover="this.style.background='var(--bg-light)'"
                                            onmouseout="this.style.background='transparent'">
                                            <td
                                                style="padding: 16px; font-weight: 600; color: var(--text-dark); font-size: 14px;">
                                                <%= order.buyer_name %>
                                            </td>
                                            <td style="padding: 16px; color: var(--text-gray); font-size: 14px;">
                                                <%= order.product_name %> <span
                                                        style="font-weight: 700; color: #3b82f6;">(x<%= order.quantity
                                                            %>)</span>
                                            </td>
                                            <td
                                                style="padding: 16px; font-weight: 700; color: var(--text-dark); font-size: 14px;">
                                                Rp <%= parseInt(order.price * order.quantity).toLocaleString('id-ID') %>
                                            </td>
                                            <td style="padding: 16px;">
                                                <% if (order.status==='pending' ) { %>
                                                    <span
                                                        style="background: #fef08a; color: #854d0e; padding: 6px 12px; border-radius: 99px; font-size: 11px; font-weight: 700; letter-spacing: 0.5px;"
                                                        data-i18n="seller.st_pending">‚è≥
                                                        Menunggu Dibayar</span>
                                                    <% } else if (order.status==='paid' ) { %>
                                                        <span
                                                            style="background: #bfdbfe; color: #1e40af; padding: 6px 12px; border-radius: 99px; font-size: 11px; font-weight: 700; letter-spacing: 0.5px;"
                                                            data-i18n="seller.st_paid">‚ö†Ô∏è
                                                            Perlu Diproses</span>
                                                        <% } else if (order.status==='processed' ) { %>
                                                            <span
                                                                style="background: #fde047; color: #a16207; padding: 6px 12px; border-radius: 99px; font-size: 11px; font-weight: 700; letter-spacing: 0.5px;"
                                                                data-i18n="seller.st_processed">üì¶
                                                                Sedang Dikemas</span>
                                                            <% } else if (order.status==='shipped' ) { %>
                                                                <span
                                                                    style="background: #e9d5ff; color: #6b21a8; padding: 6px 12px; border-radius: 99px; font-size: 11px; font-weight: 700; letter-spacing: 0.5px;"
                                                                    data-i18n="seller.st_shipped">üöö
                                                                    Meluncur Dikirim</span>
                                                                <% } else if (order.status==='completed' ) { %>
                                                                    <span
                                                                        style="background: #bbf7d0; color: #166534; padding: 6px 12px; border-radius: 99px; font-size: 11px; font-weight: 700; letter-spacing: 0.5px;"
                                                                        data-i18n="seller.st_completed">‚úÖ
                                                                        Transaksi Selesai</span>
                                                                    <% } else { %>
                                                                        <span
                                                                            style="background: #fecaca; color: #991b1b; padding: 6px 12px; border-radius: 99px; font-size: 11px; font-weight: 700; letter-spacing: 0.5px;">
                                                                            <%= order.status %>
                                                                        </span>
                                                                        <% } %>
                                            </td>
                                            <td style="padding: 16px; color: var(--text-gray); font-size: 13px;">
                                                <%= new Date(order.date).toLocaleDateString('id-ID', { year: 'numeric' ,
                                                    month: 'long' , day: 'numeric' }) %>
                                            </td>
                                        </tr>
                                        <% }) %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="5"
                                                        style="text-align: center; padding: 40px; color: var(--text-gray);"
                                                        data-i18n="seller.no_orders">
                                                        Hingga saat ini belum ada pesanan yang masuk. Perbanyak
                                                        inventaris produk!</td>
                                                </tr>
                                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const ctx = document.getElementById('revenueChart').getContext('2d');

                // Create Gradient
                const gradientInfo = ctx.createLinearGradient(0, 0, 0, 300);
                gradientInfo.addColorStop(0, 'rgba(59, 130, 246, 0.4)');
                gradientInfo.addColorStop(1, 'rgba(59, 130, 246, 0.05)');

                const monthlyRevenue = JSON.parse('<%- monthlyRevenue || "[]" %>');
                const labels = ['Jan', 'Feb', 'Mar', 'Apr', 'Mei', 'Jun', 'Jul', 'Agu', 'Sep', 'Okt', 'Nov', 'Des'];

                new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: labels,
                        datasets: [{
                            label: 'Laba Bersih Lapak (Rp)',
                            data: monthlyRevenue,
                            borderColor: '#3b82f6',
                            backgroundColor: gradientInfo,
                            borderWidth: 3,
                            pointBackgroundColor: '#ffffff',
                            pointBorderColor: '#3b82f6',
                            pointBorderWidth: 2,
                            pointRadius: 4,
                            pointHoverRadius: 6,
                            fill: true,
                            tension: 0.4
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { display: false },
                            tooltip: {
                                backgroundColor: '#1f2937',
                                padding: 12,
                                titleFont: { size: 14, weight: 'bold' },
                                bodyFont: { size: 14 },
                                callbacks: {
                                    label: function (context) {
                                        return 'Rp ' + context.parsed.y.toLocaleString('id-ID');
                                    }
                                }
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                grid: { borderDash: [4, 4], color: 'var(--border)' },
                                ticks: {
                                    color: '#6b7280',
                                    callback: value => 'Rp ' + (value / 1000) + 'k'
                                }
                            },
                            x: {
                                grid: { display: false },
                                ticks: { color: '#6b7280', font: { weight: '600' } }
                            }
                        }
                    }
                });
            });
        </script>

        <%- include('../partials/footer') %>