<%- include('partials/header', { activeTab: 'dashboard' }) %>

    <div class="dashboard-container" style="padding: 20px;">
        <% if (currentUser.role==='seller' || currentUser.role==='admin' ) { %>
            <!-- SELLER DASHBOARD -->
            <div class="dashboard-header">
                <h1>Dashboard Toko</h1>
                <p>Halo, <%= currentUser.full_name || currentUser.username %>! Kelola produk Anda disini.</p>
                <div class="dashboard-stats">
                    <div class="stat-card">
                        <div class="stat-value">
                            <%= stats.totalProducts %>
                        </div>
                        <div class="stat-label">Total Produk</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-value">
                            <%= stats.totalStock %>
                        </div>
                        <div class="stat-label">Total Stok</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-value">Rp <%= parseInt(stats.totalValue).toLocaleString('id-ID') %>
                        </div>
                        <div class="stat-label">Nilai Inventory</div>
                    </div>
                </div>
            </div>

            <div class="section-header"
                style="margin-top: 30px; display: flex; justify-content: space-between; align-items: center;">
                <h2 class="section-title">Produk Saya</h2>
                <a href="/products/new" class="btn-primary"
                    style="text-decoration: none; display: inline-flex; align-items: center; gap: 8px; padding: 10px 20px; border-radius: 8px; font-weight: 600;">
                    <span>âž•</span> Tambah Produk
                </a>
            </div>

            <div class="products-grid">
                <% if (products.length===0) { %>
                    <p>Belum ada produk. Silakan tambah produk baru.</p>
                    <% } else { %>
                        <% products.forEach(product=> { %>
                            <div class="product-card">
                                <div class="product-image">
                                    <img src="<%= product.image_url || '/img/default-product.svg' %>"
                                        alt="<%= product.name %>" style="width: 100%; height: 100%; object-fit: cover;">
                                </div>
                                <div class="product-info">
                                    <h3 class="product-title">
                                        <%= product.name %>
                                    </h3>
                                    <div style="display: flex; gap: 8px; align-items: center; margin-bottom: 8px;">
                                        <% if (product.stock===0) { %>
                                            <span class="stock-badge error"
                                                style="background: #fee2e2; color: #dc2626; padding: 4px 8px; border-radius: 4px; font-size: 11px; font-weight: 600;">Habis</span>
                                            <% } else if (product.stock <=5) { %>
                                                <span class="stock-badge warning"
                                                    style="background: #fef3c7; color: #d97706; padding: 4px 8px; border-radius: 4px; font-size: 11px; font-weight: 600;">Sisa:
                                                    <%= product.stock %>
                                                </span>
                                                <% } else { %>
                                                    <span class="stock-badge"
                                                        style="background: #d1fae5; color: #059669; padding: 4px 8px; border-radius: 4px; font-size: 11px; font-weight: 600;">Stok:
                                                        <%= product.stock %>
                                                    </span>
                                                    <% } %>
                                    </div>
                                    <div class="product-info">
                                        <h3 class="product-title">
                                            <%= product.name %>
                                        </h3>
                                        <p style="color: #6b7280; font-size: 14px;">Stok: <%= product.stock %>
                                        </p>
                                        <div class="product-footer">
                                            <div class="product-price">Rp <%=
                                                    parseInt(product.price).toLocaleString('id-ID') %>
                                            </div>
                                            <div style="display: flex; gap: 8px;">
                                                <a href="/products/<%= product.id %>/edit" class="btn-small"
                                                    style="background: #f3f4f6; color: #374151; text-decoration: none; padding: 6px 12px; border-radius: 6px; font-size: 12px;">Edit</a>
                                                <form action="/products/<%= product.id %>?_method=DELETE" method="POST"
                                                    onsubmit="return confirmAction(event, 'Yakin ingin menghapus produk ini?', 'Ya, Hapus', '#EF4444');">
                                                    <button type="submit" class="btn-small"
                                                        style="background: #fee2e2; color: #b91c1c; border: none; padding: 6px 12px; border-radius: 6px; font-size: 12px; cursor: pointer;">Hapus</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                                    <% } %>
                            </div>

                            <!-- SELLER INCOMING ORDERS -->
                            <div class="section-header" style="margin-top: 30px;">
                                <h2 class="section-title">Pesanan Masuk</h2>
                            </div>
                            <div class="table-container"
                                style="background: white; border-radius: 12px; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1); overflow: hidden; margin-bottom: 40px;">
                                <table style="width: 100%; border-collapse: collapse;">
                                    <thead>
                                        <tr style="background: #f9fafb; text-align: left;">
                                            <th style="padding: 16px;">Tanggal</th>
                                            <th style="padding: 16px;">Produk</th>
                                            <th style="padding: 16px;">Pembeli</th>
                                            <th style="padding: 16px;">Qty</th>
                                            <th style="padding: 16px;">Total</th>
                                            <th style="padding: 16px;">Status</th>
                                            <th style="padding: 16px;">Aksi</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (orders.length===0) { %>
                                            <tr>
                                                <td colspan="7" style="padding: 24px; text-align: center;">Belum ada
                                                    pesanan masuk.</td>
                                            </tr>
                                            <% } else { %>
                                                <% orders.forEach(item=> { %>
                                                    <tr>
                                                        <td style="padding: 16px; border-bottom: 1px solid #e5e7eb;">
                                                            <%= new Date(item.created_at).toLocaleDateString('id-ID') %>
                                                        </td>
                                                        <td style="padding: 16px; border-bottom: 1px solid #e5e7eb;">
                                                            <div style="display: flex; align-items: center; gap: 10px;">
                                                                <img src="<%= item.image_url || '/img/default-product.svg' %>"
                                                                    style="width: 40px; height: 40px; border-radius: 4px; object-fit: cover;">
                                                                <span>
                                                                    <%= item.product_name %>
                                                                </span>
                                                            </div>
                                                        </td>
                                                        <td style="padding: 16px; border-bottom: 1px solid #e5e7eb;">
                                                            <%= item.buyer_name %>
                                                        </td>
                                                        <td style="padding: 16px; border-bottom: 1px solid #e5e7eb;">
                                                            <%= item.quantity %>
                                                        </td>
                                                        <td
                                                            style="padding: 16px; border-bottom: 1px solid #e5e7eb; font-weight: 600;">
                                                            Rp <%= (item.price_at_purchase *
                                                                item.quantity).toLocaleString('id-ID') %>
                                                        </td>
                                                        <td style="padding: 16px; border-bottom: 1px solid #e5e7eb;">
                                                            <span style="padding: 4px 12px; border-radius: 9999px; font-size: 12px; font-weight: 500; 
                                            <%= item.status === 'processed' || item.status === 'completed' ? 'background: #d1fae5; color: #065f46;' : 
                                               item.status === 'rejected' || item.status === 'cancelled' ? 'background: #fee2e2; color: #b91c1c;' : 
                                               'background: #fef3c7; color: #92400e;' %>">
                                                                <%= item.status.charAt(0).toUpperCase() +
                                                                    item.status.slice(1) %>
                                                            </span>
                                                        </td>
                                                        <td style="padding: 16px; border-bottom: 1px solid #e5e7eb;">
                                                            <% if (item.status==='pending' ) { %>
                                                                <div style="display: flex; gap: 6px;">
                                                                    <form action="/orders/items/<%= item.id %>/accept"
                                                                        method="POST">
                                                                        <button type="submit" class="btn-small"
                                                                            style="background: #d1fae5; color: #065f46; border: none; padding: 6px 10px; border-radius: 4px; cursor: pointer; font-weight:600;">Terima</button>
                                                                    </form>
                                                                    <form action="/orders/items/<%= item.id %>/reject"
                                                                        method="POST"
                                                                        onsubmit="return confirmAction(event, 'Tolak pesanan ini dan kembalikan stok?', 'Ya, Tolak', '#EF4444');">
                                                                        <button type="submit" class="btn-small"
                                                                            style="background: #fee2e2; color: #b91c1c; border: none; padding: 6px 10px; border-radius: 4px; cursor: pointer; font-weight:600;">Tolak</button>
                                                                    </form>
                                                                </div>
                                                                <% } else { %>
                                                                    <span
                                                                        style="color: #9ca3af; font-size: 12px;">Selesai</span>
                                                                    <% } %>
                                                        </td>
                                                    </tr>
                                                    <% }); %>
                                                        <% } %>
                                    </tbody>
                                </table>
                            </div>

                            <% } else { %>
                                <!-- BUYER DASHBOARD -->
                                <div class="dashboard-header"
                                    style="background: linear-gradient(135deg, #FF6B35, #E55A2D);">
                                    <h1 style="color: white;">Halo, <%= currentUser.full_name || currentUser.username %>
                                            ! ðŸ‘‹</h1>
                                    <p style="color: rgba(255,255,255,0.9);">Riwayat pesanan Anda</p>

                                    <div class="dashboard-stats">
                                        <div class="stat-card">
                                            <div class="stat-value">
                                                <%= stats.totalOrders %>
                                            </div>
                                            <div class="stat-label">Total Pesanan</div>
                                        </div>
                                        <div class="stat-card">
                                            <div class="stat-value">
                                                <%= stats.activeOrders %>
                                            </div>
                                            <div class="stat-label">Pesanan Aktif</div>
                                        </div>
                                        <div class="stat-card">
                                            <div class="stat-value">Rp <%=
                                                    parseInt(stats.totalSpent).toLocaleString('id-ID') %>
                                            </div>
                                            <div class="stat-label">Total Belanja</div>
                                        </div>
                                    </div>
                                </div>

                                <div class="section-header" style="margin-top: 30px;">
                                    <h2 class="section-title">Riwayat Transaksi</h2>
                                </div>

                                <div class="table-container"
                                    style="background: white; border-radius: 12px; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1); overflow: hidden;">
                                    <table style="width: 100%; border-collapse: collapse;">
                                        <thead>
                                            <tr style="background: #f9fafb; text-align: left;">
                                                <th style="padding: 16px; border-bottom: 1px solid #e5e7eb;">ID Pesanan
                                                </th>
                                                <th style="padding: 16px; border-bottom: 1px solid #e5e7eb;">Tanggal
                                                </th>
                                                <th style="padding: 16px; border-bottom: 1px solid #e5e7eb;">Total
                                                    Belanja</th>
                                                <th style="padding: 16px; border-bottom: 1px solid #e5e7eb;">Status</th>
                                                <th style="padding: 16px; border-bottom: 1px solid #e5e7eb;">Aksi</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (orders.length===0) { %>
                                                <tr>
                                                    <td colspan="5"
                                                        style="padding: 24px; text-align: center; color: #6b7280;">Belum
                                                        ada
                                                        pesanan.</td>
                                                </tr>
                                                <% } else { %>
                                                    <% orders.forEach(order=> { %>
                                                        <tr>
                                                            <td
                                                                style="padding: 16px; border-bottom: 1px solid #e5e7eb;">
                                                                #ORD-<%= order.id %>
                                                            </td>
                                                            <td
                                                                style="padding: 16px; border-bottom: 1px solid #e5e7eb;">
                                                                <%= new
                                                                    Date(order.created_at).toLocaleDateString('id-ID')
                                                                    %>
                                                            </td>
                                                            <td
                                                                style="padding: 16px; border-bottom: 1px solid #e5e7eb; font-weight: 600;">
                                                                Rp <%=
                                                                    parseInt(order.total_price).toLocaleString('id-ID')
                                                                    %>
                                                            </td>
                                                            <td
                                                                style="padding: 16px; border-bottom: 1px solid #e5e7eb;">
                                                                <span style="padding: 4px 12px; border-radius: 9999px; font-size: 12px; font-weight: 500; 
                                        <%= order.status === 'completed' ? 'background: #d1fae5; color: #065f46;' : 
                                           order.status === 'cancelled' ? 'background: #fee2e2; color: #b91c1c;' : 
                                           'background: #fef3c7; color: #92400e;' %>">
                                                                    <%= order.status.charAt(0).toUpperCase() +
                                                                        order.status.slice(1) %>
                                                                </span>
                                                            </td>
                                                            <td
                                                                style="padding: 16px; border-bottom: 1px solid #e5e7eb;">
                                                                <a href="/orders/<%= order.id %>" class="btn-small"
                                                                    style="text-decoration: none; border: 1px solid #d1d5db; color: #374151; padding: 6px 12px; border-radius: 6px; font-size: 12px; display: inline-block;">
                                                                    Lihat Detail
                                                                </a>
                                                            </td>
                                                        </tr>
                                                        <% }); %>
                                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                                <% } %>
            </div>

            <%- include('partials/footer') %>