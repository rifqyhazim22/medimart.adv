<%- include('../partials/header', { activeTab: 'dashboard' }) %>

    <style>
        /* Embedded Premium Dashboard Styles */
        .dashboard-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 40px 20px;
        }

        /* Header & Stats */
        .dashboard-header {
            background: transparent;
            padding: 0;
            box-shadow: none;
            color: var(--text-dark);
            margin-bottom: 40px;
        }

        .dashboard-header h1 {
            font-size: 32px;
            font-weight: 800;
            color: var(--text-dark);
            margin-bottom: 8px;
            background: none;
            -webkit-text-fill-color: initial;
        }

        .dashboard-header p {
            color: var(--text-gray);
            font-size: 16px;
        }

        .dashboard-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 24px;
            margin-top: 32px;
        }

        .stat-card {
            background: var(--bg-white);
            padding: 24px;
            border-radius: 16px;
            border: 1px solid var(--border);
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03);
            display: flex;
            align-items: center;
            gap: 20px;
            transition: transform 0.2s;
        }

        .stat-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        }

        .stat-icon {
            width: 56px;
            height: 56px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
        }

        .stat-icon.blue {
            background: #eff6ff;
            color: #3b82f6;
        }

        .stat-icon.orange {
            background: #fff7ed;
            color: #f97316;
        }

        .stat-icon.green {
            background: #f0fdf4;
            color: #22c55e;
        }

        .stat-content h3 {
            margin: 0;
            color: var(--text-gray);
            font-size: 14px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            margin-bottom: 4px;
        }

        .stat-value {
            font-size: 28px;
            font-weight: 700;
            color: var(--text-dark);
            margin: 0;
        }

        /* Orders List */
        .section-title {
            font-size: 20px;
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 24px;
            padding-bottom: 16px;
            border-bottom: 1px solid var(--border);
        }

        .order-card {
            background: var(--bg-white);
            border: 1px solid var(--border);
            border-radius: 16px;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
            padding: 24px;
            margin-bottom: 24px;
            transition: all 0.2s;
        }

        .order-card:hover {
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
            border-color: var(--border);
        }

        .order-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 20px;
            padding-bottom: 20px;
            border-bottom: 1px solid #f9fafb;
        }

        .order-info {
            display: flex;
            gap: 16px;
            align-items: center;
        }

        .order-icon-box {
            width: 48px;
            height: 48px;
            background: var(--border);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
        }

        .order-details h3 {
            margin: 0;
            font-size: 16px;
            font-weight: 700;
            color: var(--text-dark);
        }

        .order-date {
            margin: 4px 0 0;
            color: var(--text-gray);
            font-size: 13px;
        }

        .status-badge {
            padding: 6px 12px;
            border-radius: 9999px;
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .status-badge.completed,
        .status-badge.paid {
            background: #d1fae5;
            color: #065f46;
        }

        .status-badge.cancelled,
        .status-badge.rejected {
            background: #fee2e2;
            color: #b91c1c;
        }

        .status-badge.processing,
        .status-badge.shipped {
            background: #dbeafe;
            color: #1e40af;
        }

        .status-badge.pending {
            background: #fef3c7;
            color: #92400e;
        }

        .order-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 8px;
        }

        .total-label {
            font-size: 13px;
            color: var(--text-gray);
            margin-bottom: 4px;
            display: block;
        }

        .total-amount {
            font-size: 20px;
            font-weight: 700;
            color: var(--text-dark);
        }

        .action-buttons {
            display: flex;
            gap: 12px;
        }

        .btn-detail {
            display: inline-flex;
            align-items: center;
            padding: 10px 20px;
            background: #00B09B;
            color: white;
            font-weight: 600;
            font-size: 14px;
            border-radius: 8px;
            text-decoration: none;
            transition: all 0.2s;
            border: none;
            box-shadow: 0 4px 6px -1px rgba(0, 176, 155, 0.2);
        }

        .btn-detail:hover {
            background: #009684;
            transform: translateY(-1px);
            box-shadow: 0 6px 8px -1px rgba(0, 176, 155, 0.3);
        }

        .btn-ghost-danger {
            display: inline-flex;
            align-items: center;
            padding: 10px 16px;
            background: transparent;
            color: #ef4444;
            font-weight: 500;
            font-size: 14px;
            border-radius: 8px;
            border: 1px solid transparent;
            cursor: pointer;
            transition: all 0.2s;
        }

        .btn-ghost-danger:hover {
            background: #fef2f2;
            border-color: #fee2e2;
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            background: var(--bg-white);
            border-radius: 16px;
            border: 1px dashed var(--border);
            margin-top: 40px;
        }

        .empty-icon {
            font-size: 48px;
            margin-bottom: 16px;
            display: block;
        }
    </style>

    <div class="main-container">
        <div class="dashboard-container">
            <!-- Header & Stats -->
            <div class="dashboard-header">
                <h1>Pesanan Saya</h1>
                <p>Halo, <strong>
                        <%= currentUser.full_name || currentUser.username %>
                    </strong>! Kelola riwayat belanjaan Anda di sini.</p>

                <div class="dashboard-stats">
                    <div class="stat-card">
                        <div class="stat-icon blue">üì¶</div>
                        <div class="stat-content">
                            <h3>Total Pesanan</h3>
                            <div class="stat-value">
                                <%= stats.totalOrders %>
                            </div>
                        </div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon orange">‚è≥</div>
                        <div class="stat-content">
                            <h3>Pesanan Aktif</h3>
                            <div class="stat-value">
                                <%= stats.activeOrders %>
                            </div>
                        </div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon green">üí∞</div>
                        <div class="stat-content">
                            <h3>Total Belanja</h3>
                            <div class="stat-value">Rp <%= parseInt(stats.totalSpent).toLocaleString('id-ID') %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Orders List (Table View) -->
            <div class="section-header"
                style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px;">
                <h2 class="section-title" style="margin: 0; border: none;">Riwayat Belanja</h2>
                <a href="/" class="btn-detail" style="padding: 8px 16px; font-size: 14px;">üõçÔ∏è Belanja Lagi</a>
            </div>

            <div class="table-container"
                style="background: var(--bg-white); border-radius: 12px; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1); overflow: hidden; margin-bottom: 40px;">
                <table style="width: 100%; border-collapse: collapse;">
                    <thead>
                        <tr style="background: var(--bg-light); text-align: left;">
                            <th style="padding: 16px; width: 120px;">Tanggal</th>
                            <th colspan="3" style="padding: 16px;">Rincian Barang</th>
                            <th style="padding: 16px;">Total Tagihan</th>
                            <th style="padding: 16px;">Status</th>
                            <th style="padding: 16px;">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (orders.length===0) { %>
                            <tr>
                                <td colspan="7" style="padding: 40px; text-align: center;">
                                    <span style="font-size: 40px; display: block; margin-bottom: 10px;">üõçÔ∏è</span>
                                    <h3 style="color: var(--text-dark); margin: 0 0 8px 0;">Belum ada pesanan</h3>
                                    <p style="color: var(--text-gray); margin: 0;">Yuk, mulai belanja kebutuhan kesehatanmu
                                        sekarang!</p>
                                </td>
                            </tr>
                            <% } else { %>
                                <% orders.forEach(order=> { %>
                                    <tr>
                                        <!-- Tanggal -->
                                        <td
                                            style="padding: 16px; border-bottom: 1px solid var(--border); white-space: nowrap; vertical-align: top;">
                                            <div style="font-weight: 500; color: var(--text-dark);">
                                                <%= new Date(order.createdAt).toLocaleDateString('id-ID', {
                                                    day: 'numeric' , month: 'short' , year: 'numeric' }) %>
                                            </div>
                                            <div style="font-size: 12px; color: var(--text-gray);">
                                                <%= new Date(order.createdAt).toLocaleTimeString('id-ID', {
                                                    hour: '2-digit' , minute: '2-digit' }) %>
                                            </div>
                                            <div style="font-size: 11px; color: var(--text-gray); margin-top: 4px;">
                                                #ORD-<%= order.id %>
                                            </div>
                                        </td>

                                        <!-- Produk & Penjual (Grouped) -->
                                        <td colspan="3"
                                            style="padding: 16px; border-bottom: 1px solid var(--border); vertical-align: top;">
                                            <div style="display: flex; flex-direction: column; gap: 12px;">
                                                <% order.items.forEach(item=> { %>
                                                    <div style="display: flex; align-items: flex-start; gap: 12px;">
                                                        <img src="<%= item.Product ? item.Product.image_url : '/img/default-product.svg' %>"
                                                            style="width: 40px; height: 40px; border-radius: 6px; object-fit: cover; border: 1px solid var(--border); margin-top: 2px;">
                                                        <div style="flex: 1;">
                                                            <div
                                                                style="font-weight: 600; color: var(--text-dark); font-size: 14px; margin-bottom: 2px;">
                                                                <%= item.Product ? item.Product.name : 'Produk Dihapus'
                                                                    %>
                                                                    <span
                                                                        style="font-weight: normal; color: var(--text-gray); font-size: 13px;">x
                                                                        <%= item.quantity %>
                                                                    </span>
                                                            </div>
                                                            <div
                                                                style="font-size: 12px; color: var(--text-gray); display: flex; align-items: center; gap: 4px;">
                                                                üè™ <%= item.seller ? (item.seller.full_name ||
                                                                    item.seller.username) : 'Sistem' %>
                                                                    <% if (item.status==='cancelled' ||
                                                                        item.status==='rejected' ) { %>
                                                                        <span
                                                                            style="color: #dc2626; background: #fee2e2; padding: 2px 6px; border-radius: 4px; font-size: 10px; margin-left: 4px;">
                                                                            <%= item.status==='rejected'
                                                                                ? '‚õî Ditolak Penjual' : '‚ùå Dibatalkan'
                                                                                %>
                                                                        </span>
                                                                        <% } else if (item.status==='shipped' ) { %>
                                                                            <span
                                                                                style="color: #1e40af; background: #dbeafe; padding: 2px 6px; border-radius: 4px; font-size: 10px; margin-left: 4px;">
                                                                                üöö Dalam Perjalanan Kurir
                                                                            </span>
                                                                            <% } else if (item.status==='completed' ) {
                                                                                %>
                                                                                <span
                                                                                    style="color: #065f46; background: #d1fae5; padding: 2px 6px; border-radius: 4px; font-size: 10px; margin-left: 4px;">
                                                                                    ‚úÖ Barang Diterima
                                                                                </span>
                                                                                <% } else if (item.status==='processed'
                                                                                    ) { %>
                                                                                    <span
                                                                                        style="color: #0d9488; background: #ccfbf1; padding: 2px 6px; border-radius: 4px; font-size: 10px; margin-left: 4px;">
                                                                                        üîµ Sedang Dikemas Penjual
                                                                                    </span>
                                                                                    <% } else { %>
                                                                                        <span
                                                                                            style="color: #92400e; background: #fef3c7; padding: 2px 6px; border-radius: 4px; font-size: 10px; margin-left: 4px;">
                                                                                            üü° Menunggu Lapak Diproses
                                                                                        </span>
                                                                                        <% } %>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <% }) %>
                                            </div>
                                        </td>

                                        <!-- Total -->
                                        <td
                                            style="padding: 16px; border-bottom: 1px solid var(--border); font-weight: 600; color: var(--text-dark); vertical-align: top;">
                                            Rp <%= parseFloat(order.total_price).toLocaleString('id-ID') %>
                                        </td>

                                        <!-- Status Utama Order -->
                                        <td
                                            style="padding: 16px; border-bottom: 1px solid var(--border); vertical-align: top;">
                                            <% /* Dinamika Status Pembatalan Campuran (Refund Parsial/Gagal Bersama) */
                                                let hasCancelled=order.items.some(i=> i.status === 'cancelled');
                                                let hasRejected = order.items.some(i => i.status === 'rejected');
                                                let hasActive = order.items.some(i => !['rejected',
                                                'cancelled'].includes(i.status));

                                                let badgeClass = order.status;
                                                let badgeText = '';

                                                if (order.status === 'paid' || order.status === 'pending') {
                                                badgeClass = 'pending'; badgeText = 'üü° Menunggu Konfirmasi';
                                                } else if (order.status === 'processing') {
                                                badgeClass = 'processing'; badgeText = 'üîµ Sedang Diproses';
                                                } else if (order.status === 'shipped') {
                                                badgeClass = 'shipped'; badgeText = 'üöö Sedang Dikirim';
                                                } else if (order.status === 'completed') {
                                                badgeClass = 'completed'; badgeText = '‚úÖ Pesanan Selesai';
                                                } else if (order.status === 'cancelled' || order.status === 'rejected')
                                                {
                                                /* Jika keranjang mati total, periksa penyebab kematiannya */
                                                if (hasCancelled && hasRejected) {
                                                badgeText = '‚õî Batal (Pembeli & Penjual)';
                                                badgeClass = 'cancelled';
                                                } else if (order.status === 'cancelled') {
                                                badgeText = '‚ùå Dibatalkan Pembeli';
                                                } else {
                                                badgeText = '‚õî Ditolak Penjual';
                                                }
                                                }

                                                /* Sisipkan Tanda Parsial jika tagihan utama berjalan sukses tapi ada
                                                sekelumit item yang gagal (Refund) */
                                                if (hasActive && (hasCancelled || hasRejected)) {
                                                badgeText += ' (Parsial)';
                                                }
                                                %>
                                                <span class="status-badge <%= badgeClass %>">
                                                    <%= badgeText %>
                                                </span>
                                        </td>

                                        <!-- Aksi -->
                                        <td
                                            style="padding: 16px; border-bottom: 1px solid var(--border); vertical-align: top;">
                                            <div style="display: flex; gap: 8px; flex-direction: column;">
                                                <a href="/orders/<%= order.id %>" class="btn-small btn-secondary"
                                                    style="text-decoration: none; display: inline-flex; align-items: center; justify-content: center; padding: 6px 12px; font-size: 13px; border-radius: 6px; background: var(--border); color: var(--text-dark); font-weight: 500;">
                                                    Detail Invoice
                                                </a>

                                                <% if (order.status==='completed' || order.status==='cancelled' ||
                                                    order.status==='rejected' ) { %>
                                                    <form action="/orders/<%= order.id %>/hide" method="POST"
                                                        onsubmit="return confirmAction(event, 'Yakin ingin menyembunyikan riwayat pesanan ini?', 'Ya, Sembunyikan', '#EF4444');"
                                                        style="margin: 0;">
                                                        <button type="submit" class="btn-small btn-delete"
                                                            style="width: 100%; border: none; padding: 6px 12px; font-size: 13px; border-radius: 6px; cursor: pointer; background: #fee2e2; color: #b91c1c;">
                                                            üóëÔ∏è Hapus
                                                        </button>
                                                    </form>
                                                    <% } %>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }); %>
                                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>