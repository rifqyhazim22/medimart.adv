<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - MediMart</title>
    <!-- Google Fonts -->
    <link
        href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700;800&family=DM+Sans:wght@400;500;700&display=swap"
        rel="stylesheet">
    <!-- CSS -->
    <link rel="stylesheet" href="/css/login.css">
    <!-- i18n System -->
    <script src="/js/i18n.js"></script>
    <!-- Theme Initialization (Prevent FOUC) -->
    <script>
        const savedTheme = localStorage.getItem('medimart_theme') || 'light';
        document.documentElement.setAttribute('data-theme', savedTheme);
    </script>
    <!-- SweetAlert2 & Animate.css for psychological UI modals -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <style>
        .psych-modal {
            border-radius: 20px !important;
        }
    </style>
</head>

<body>
    <!-- Floating Theme Toggle -->
    <button class="theme-toggle-float" id="themeToggleBtn" onclick="toggleTheme()" title="Ganti Siang/Malam">üåô</button>
    <!-- Floating Language Toggle -->
    <button class="theme-toggle-float" id="langToggleFloat" onclick="toggleLanguage()" title="Ganti Bahasa"
        style="right: 70px; font-size: 13px; font-weight: 700; font-family: 'Outfit', sans-serif;">ID</button>

    <div class="login-container">
        <!-- Left Side - Branding -->
        <div class="login-left">
            <div class="brand-content">
                <div class="logo">
                    <div class="logo-icon">üíä</div>
                    <h1>MediMart</h1>
                </div>
                <p class="tagline" data-i18n="login.brand_tagline">Marketplace Obat & Produk Kesehatan Terpercaya</p>

                <div class="features">
                    <div class="feature-item">
                        <span class="feature-icon">üè™</span>
                        <div>
                            <h3 data-i18n="login.feat1_title">Marketplace Lengkap</h3>
                            <p data-i18n="login.feat1_desc">Ribuan produk kesehatan tersedia</p>
                        </div>
                    </div>
                    <div class="feature-item">
                        <span class="feature-icon">üìä</span>
                        <div>
                            <h3 data-i18n="login.feat2_title">Dashboard Seller</h3>
                            <p data-i18n="login.feat2_desc">Kelola toko Anda dengan mudah</p>
                        </div>
                    </div>
                    <div class="feature-item">
                        <span class="feature-icon">üîí</span>
                        <div>
                            <h3 data-i18n="login.feat3_title">Aman & Terpercaya</h3>
                            <p data-i18n="login.feat3_desc">Transaksi dijamin keamanannya</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Side - Login Form -->
        <div class="login-right">
            <div class="login-box">
                <div id="loginView">
                    <div class="login-header">
                        <h2 data-i18n="login.welcome">Selamat Datang!</h2>
                        <p data-i18n="login.subtitle">Silakan login sesuai peran Anda</p>
                    </div>

                    <!-- Role Tabs (Visual Only - handled by backend check) -->
                    <div class="role-tabs"
                        style="display: flex; gap: 8px; margin-bottom: 24px; padding: 4px; background: var(--border); border-radius: 12px;">
                        <button type="button" class="role-tab active" onclick="selectRole('customer')"
                            style="flex: 1; padding: 8px; border: none; border-radius: 8px; background: var(--bg-white); color: #FF6B35; font-weight: 600; cursor: pointer; transition: all 0.3s; box-shadow: 0 1px 2px rgba(0,0,0,0.1);">
                            <span data-i18n="login.role_customer">Pelanggan</span>
                        </button>
                        <button type="button" class="role-tab" onclick="selectRole('seller')"
                            style="flex: 1; padding: 8px; border: none; border-radius: 8px; background: transparent; color: var(--text-gray); font-weight: 500; cursor: pointer; transition: all 0.3s;">
                            <span data-i18n="login.role_seller">Seller</span>
                        </button>
                        <button type="button" class="role-tab" onclick="selectRole('admin')"
                            style="flex: 1; padding: 8px; border: none; border-radius: 8px; background: transparent; color: var(--text-gray); font-weight: 500; cursor: pointer; transition: all 0.3s;">
                            <span data-i18n="login.role_admin">Admin</span>
                        </button>
                    </div>

                    <% if (error && error.length> 0) { %>
                        <div class="alert alert-error"
                            style="background-color: #fee2e2; color: #b91c1c; padding: 12px; border-radius: 8px; margin-bottom: 20px;">
                            <%= error %>
                        </div>
                        <% } %>
                            <% if (success_msg && success_msg.length> 0) { %>
                                <div class="alert alert-success"
                                    style="background-color: #d1e7dd; color: #0f5132; padding: 12px; border-radius: 8px; margin-bottom: 20px;">
                                    <%= success_msg %>
                                </div>
                                <% } %>

                                    <form id="loginForm" class="login-form" action="/auth/login" method="POST">
                                        <input type="hidden" id="roleInput" name="role" value="customer">

                                        <div class="form-group">
                                            <label for="username" data-i18n="login.username">Email / Username</label>
                                            <div class="input-wrapper">
                                                <span class="input-icon">üë§</span>
                                                <input type="text" id="username" name="username"
                                                    data-i18n-placeholder="login.username_placeholder"
                                                    placeholder="Masukkan email atau username" required
                                                    autocomplete="username">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div
                                                style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 8px;">
                                                <label for="password" style="margin-bottom: 0;"
                                                    data-i18n="login.password">Password</label>
                                            </div>
                                            <div class="input-wrapper">
                                                <span class="input-icon">üîí</span>
                                                <input type="password" id="password" name="password"
                                                    data-i18n-placeholder="login.password_placeholder"
                                                    placeholder="Masukkan password" required
                                                    autocomplete="current-password">
                                                <button type="button" class="toggle-password"
                                                    onclick="togglePassword()">
                                                    <span id="toggleIcon">üëÅÔ∏è</span>
                                                </button>
                                            </div>
                                        </div>

                                        <div class="form-options">
                                            <label class="remember-me">
                                                <input type="checkbox" id="rememberMe" name="remember_me">
                                                <span data-i18n="login.remember_me">Ingat saya</span>
                                            </label>
                                            <a href="/forgot-password" class="forgot-password"
                                                data-i18n="login.forgot">Lupa password?</a>
                                        </div>

                                        <button type="submit" class="btn-login">
                                            <span data-i18n="login.submit">Login</span>
                                            <span class="btn-icon">‚Üí</span>
                                        </button>

                                        <div class="divider">
                                            <span data-i18n="login.divider_or">atau</span>
                                        </div>

                                        <a href="/" class="btn-guest"
                                            style="text-decoration: none; display: flex; align-items: center; justify-content: center; gap: 8px; width: 100%; padding: 12px; border: 2px solid var(--border); border-radius: 12px; background: var(--bg-white); color: var(--text-dark); font-weight: 600; cursor: pointer; transition: all 0.2s;">
                                            <span>üõí</span>
                                            <span data-i18n="login.guest">Lanjut sebagai Tamu</span>
                                        </a>
                                    </form>

                                    <div class="login-footer">
                                        <p><span data-i18n="login.no_account">Belum punya akun?</span> <a
                                                href="/register" class="link-register"
                                                data-i18n="login.register_now">Daftar
                                                sekarang</a></p>
                                    </div>

                                    <!-- Demo Credentials Info -->
                                    <div class="demo-info"
                                        style="margin-top: 20px; padding: 16px; background: var(--bg-light); border-radius: 8px; font-size: 13px; color: var(--text-gray);">
                                        <p style="margin-bottom: 8px; color: var(--text-dark);"><strong>üí° Akun Demo
                                                (Auto-Fill
                                                Aktif):</strong></p>
                                        <p style="margin: 4px 0;">Pilih tab di atas untuk mengisi akun secara otomatis.
                                        </p>
                                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Default credentials
        const credentials = {
            customer: { username: 'user', password: 'user123' },
            seller: { username: 'seller1', password: 'seller123' },
            admin: { username: 'admin', password: 'admin123' }
        };

        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const toggleIcon = document.getElementById('toggleIcon');
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.textContent = 'üôà';
            } else {
                passwordInput.type = 'password';
                toggleIcon.textContent = 'üëÅÔ∏è';
            }
        }

        function selectRole(role) {
            // Update hidden input
            document.getElementById('roleInput').value = role;

            // Visual feedback
            const tabs = document.querySelectorAll('.role-tab');
            tabs.forEach(tab => {
                tab.style.background = 'transparent';
                tab.style.color = 'var(--text-gray)';
                tab.style.boxShadow = 'none';
                tab.classList.remove('active');

                // Highlight exact tab based on its onclick signature
                if (tab.getAttribute('onclick').includes(role)) {
                    tab.style.background = 'var(--bg-white)';
                    tab.style.color = '#FF6B35';
                    tab.style.boxShadow = '0 1px 2px rgba(0,0,0,0.1)';
                    tab.classList.add('active');
                }
            });

            // Auto-fill credentials
            if (credentials[role]) {
                document.getElementById('username').value = credentials[role].username;
                document.getElementById('password').value = credentials[role].password;
            }
        }

        // Theme Toggle Function
        function toggleTheme() {
            const current = document.documentElement.getAttribute('data-theme');
            const target = current === 'dark' ? 'light' : 'dark';
            document.documentElement.setAttribute('data-theme', target);
            localStorage.setItem('medimart_theme', target);
            document.getElementById('themeToggleBtn').innerHTML = target === 'dark' ? '‚òÄÔ∏è' : 'üåô';
        }

        // Initialize with default (customer) on load
        document.addEventListener('DOMContentLoaded', () => {
            selectRole('customer');
            // Set correct toggle icon
            const current = document.documentElement.getAttribute('data-theme');
            const btn = document.getElementById('themeToggleBtn');
            if (btn) btn.innerHTML = current === 'dark' ? '‚òÄÔ∏è' : 'üåô';
        });

        // üß† Intersepsi Login Ber-Psikologis (Meyakinkan pengguna saat masuk)
        const loginForm = document.getElementById('loginForm');
        if (loginForm) {
            loginForm.addEventListener('submit', function (e) {
                e.preventDefault();
                const role = document.getElementById('roleInput').value;
                const roleNames = { customer: 'Pelanggan', seller: 'Seller', admin: 'Instansi Admin' };

                Swal.fire({
                    title: t('swal.verifying'),
                    html: `<span style="color: var(--text-gray); font-size:15px;">${t('swal.verifying_' + role)} </span>`,
                    allowOutsideClick: false,
                    showConfirmButton: false,
                    willOpen: () => Swal.showLoading(),
                    showClass: { popup: 'animate__animated animate__fadeIn animate__faster' },
                    customClass: { popup: 'psych-modal' }
                });

                // Tahan selama 1.2 detik
                setTimeout(() => this.submit(), 1200);
            });
        }
    </script>
</body>

</html>