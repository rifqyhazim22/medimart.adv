<%- include('../partials/header', { activeTab: 'profile' }) %>

    <div class="container" style="padding: 40px 20px;">
        <div style="max-width: 800px; margin: 0 auto;">
            <div
                style="background: white; border-radius: 12px; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1); overflow: hidden;">
                <div
                    style="padding: 24px; border-bottom: 1px solid #e5e7eb; display: flex; justify-content: space-between; align-items: center;">
                    <h2 style="margin: 0; font-size: 20px;">Edit Profil</h2>
                    <a href="/profile" style="color: #6b7280; text-decoration: none; font-size: 14px;">Batal</a>
                </div>

                <div style="padding: 30px;">
                    <!-- Edit Info Form -->
                    <form action="/profile/update" method="POST" style="margin-bottom: 40px;">
                        <h3 style="font-size: 16px; margin-bottom: 20px; color: #374151;">Informasi Pribadi</h3>

                        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 20px;">
                            <div class="form-group">
                                <label
                                    style="display: block; font-size: 14px; font-weight: 500; color: #374151; margin-bottom: 6px;">Username</label>
                                <input type="text" name="username" value="<%= user.username %>" required
                                    style="width: 100%; padding: 10px; border: 1px solid #d1d5db; border-radius: 8px;">
                            </div>
                            <div class="form-group">
                                <label
                                    style="display: block; font-size: 14px; font-weight: 500; color: #374151; margin-bottom: 6px;">Nama
                                    Lengkap</label>
                                <input type="text" name="full_name" value="<%= user.full_name %>" required
                                    style="width: 100%; padding: 10px; border: 1px solid #d1d5db; border-radius: 8px;">
                            </div>
                        </div>

                        <% if (user.role==='seller' ) { %>
                            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 20px;">
                                <div class="form-group">
                                    <label
                                        style="display: block; font-size: 14px; font-weight: 500; color: #374151; margin-bottom: 6px;">Nama
                                        Toko</label>
                                    <input type="text" name="store_name"
                                        value="<%= user.seller && user.seller.store_name ? user.seller.store_name : '' %>"
                                        required
                                        style="width: 100%; padding: 10px; border: 1px solid #d1d5db; border-radius: 8px;">
                                </div>
                                <div class="form-group">
                                    <label
                                        style="display: block; font-size: 14px; font-weight: 500; color: #374151; margin-bottom: 6px;">Rekening
                                        Bank (Opsional)</label>
                                    <input type="text" name="bank_account"
                                        value="<%= user.seller && user.seller.bank_account ? user.seller.bank_account : '' %>"
                                        style="width: 100%; padding: 10px; border: 1px solid #d1d5db; border-radius: 8px;">
                                </div>
                            </div>
                            <% } %>

                                <div
                                    style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 20px;">
                                    <div class="form-group">
                                        <label
                                            style="display: block; font-size: 14px; font-weight: 500; color: #374151; margin-bottom: 6px;">Email</label>
                                        <input type="email" name="email" value="<%= user.email %>" required
                                            style="width: 100%; padding: 10px; border: 1px solid #d1d5db; border-radius: 8px;">
                                    </div>
                                    <div class="form-group">
                                        <label
                                            style="display: block; font-size: 14px; font-weight: 500; color: #374151; margin-bottom: 6px;">No.
                                            Telepon</label>
                                        <input type="text" name="phone" value="<%= user.phone %>" placeholder="08..."
                                            style="width: 100%; padding: 10px; border: 1px solid #d1d5db; border-radius: 8px;">
                                    </div>
                                </div>

                                <% if (user.role !=='admin' ) { %>
                                    <div class="form-group" style="margin-bottom: 24px;">
                                        <label
                                            style="display: block; font-size: 14px; font-weight: 500; color: #374151; margin-bottom: 6px;">
                                            <%= user.role==='seller' ? 'Alamat Fisik Toko' : 'Alamat Pengiriman Utama'
                                                %>
                                        </label>
                                        <textarea name="address" rows="3"
                                            style="width: 100%; padding: 10px; border: 1px solid #d1d5db; border-radius: 8px;"><%= user.role === 'buyer' && user.buyer && user.buyer.shipping_address ? user.buyer.shipping_address : (user.role === 'seller' && user.seller && user.seller.store_address ? user.seller.store_address : user.address) %></textarea>
                                    </div>
                                    <% } %>

                                        <div style="text-align: right;">
                                            <button type="submit" class="btn-primary">Simpan Perubahan</button>
                                        </div>
                    </form>

                    <hr style="border: 0; border-top: 1px solid #e5e7eb; margin: 30px 0;">

                    <!-- Change Password Form -->
                    <form action="/profile/change-password" method="POST">
                        <h3 style="font-size: 16px; margin-bottom: 20px; color: #374151;">Ganti Password</h3>

                        <div class="form-group" style="margin-bottom: 16px;">
                            <label
                                style="display: block; font-size: 14px; font-weight: 500; color: #374151; margin-bottom: 6px;">Password
                                Saat Ini</label>
                            <input type="password" name="currentPassword" required
                                style="width: 100%; padding: 10px; border: 1px solid #d1d5db; border-radius: 8px;">
                        </div>

                        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 24px;">
                            <div class="form-group">
                                <label
                                    style="display: block; font-size: 14px; font-weight: 500; color: #374151; margin-bottom: 6px;">Password
                                    Baru</label>
                                <input type="password" name="newPassword" required minlength="6"
                                    style="width: 100%; padding: 10px; border: 1px solid #d1d5db; border-radius: 8px;">
                            </div>
                            <div class="form-group">
                                <label
                                    style="display: block; font-size: 14px; font-weight: 500; color: #374151; margin-bottom: 6px;">Konfirmasi
                                    Password Baru</label>
                                <input type="password" name="confirmNewPassword" required minlength="6"
                                    style="width: 100%; padding: 10px; border: 1px solid #d1d5db; border-radius: 8px;">
                            </div>
                        </div>

                        <div style="text-align: right;">
                            <button type="submit" class="btn-secondary"
                                style="background: white; border: 1px solid #d1d5db; color: #374151;">Update
                                Password</button>
                        </div>
                    </form>

                    <hr style="border: 0; border-top: 1px solid #fee2e2; margin: 30px 0;">

                    <!-- Delete Account -->
                    <div
                        style="background-color: #fef2f2; padding: 20px; border-radius: 8px; border: 1px solid #fee2e2;">
                        <h3 style="font-size: 16px; margin-bottom: 10px; color: #b91c1c;">Zona Bahaya</h3>
                        <p style="font-size: 14px; color: #7f1d1d; margin-bottom: 16px;">
                            Menghapus akun Anda bersifat permanen dan tidak dapat dibatalkan. Pastikan tidak ada pesanan
                            aktif.
                        </p>
                        <div style="text-align: right;">
                            <form action="/profile/delete" method="POST"
                                onsubmit="return confirmAction(event, 'Apakah Anda YAKIN ingin menghapus akun Anda? Tindakan ini tidak dapat dibatalkan.', 'Ya, Hapus Akun', '#EF4444');">
                                <button type="submit"
                                    style="background-color: #dc2626; color: white; border: none; padding: 8px 16px; border-radius: 6px; font-weight: 600; cursor: pointer;">
                                    Hapus Akun Saya
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>